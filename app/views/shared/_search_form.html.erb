<div class="form-group row">
  <div class="col-xs-6 col-xs-offset-3">
    <%= simple_form_for :search,  url: listings_path, method: :get do |f| %>
      <%= f.input :country %>
      <%= f.input :city %>
      <%= f.submit "Search", class: "btn btn-primary"  %>
      <%= f.submit "Show all listings", class: "btn btn-primary"  %>
    <% end %>
  </div>
</div>
