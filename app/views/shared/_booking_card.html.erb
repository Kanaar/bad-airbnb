<div class="col-xs-12">
  <div class="booking-card card", style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= booking.listing.image_url %>)">
    <div class="booking-card-body">
        <div class="booking-main-details">
          <h3><%= link_to booking.listing.headline, listing_path(booking.listing) %></h3>
          <div class="date-range">
            <p>From: <%= booking.start_date %></p>
            <p>To: <%= booking.end_date %></p>
          </div>
          <p>Guests: <%= booking.guest_number %></p>
          <h2 class="price">Total price: <%= booking.total_cost %> USD</h2>
        </div>
        <div class="bookings-host-details">
          <h2 class="host">Hosted by:</h2>
          <%= image_tag booking.listing.user.image_url, class: "avatar-booking" %>
          <p><%= booking.listing.user.email %></p>
        </div>
      </div>
  </div>
</div>
