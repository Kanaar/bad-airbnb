<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1>AirBnBroke</h1>
        <p>Even the worst place to stay is better than no place at all.</p>
        <%= render partial: "shared/search_form" %>
      </div>
    </div>
  </div>
</div>

<% if @listings.length > 0 %>
  <div class="main-container">
    <div class="container">
      <div class="cards-container">
        <div class="row">
          <div class="notice"><%= notice %></div>
          <div class="alert"><%= alert %></div>
          <h2 class="header"><%= @header %></h2>
          <% @listings.each do |listing| %>
          <%= render partial: "shared/listing_card", locals: { listing: listing }%>
          <% end %>
        </div>
      </div>
    </div>
    <div id="map"></div>
  </div>
<% end %>
